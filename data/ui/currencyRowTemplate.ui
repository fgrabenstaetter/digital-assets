<interface>
  <template class="CurrencyRowTemplate" parent="GtkListBoxRow">
    <property name="name">currencyRowTemplate</property>
    <child>
      <object class="GtkBox">
        <property name="spacing">16</property>
        <child>
          <object class="GtkImage" id="currencyLogo">
            <property name="name">rowCurrencyLogo</property>
            <property name="pixel-size">32</property>
          </object>
        </child>
        <child>
          <object class="GtkBox">
            <property name="hexpand">true</property>
            <property name="orientation">vertical</property>
            <child>
              <object class="GtkLabel" id="currencyName">
                <property name="name">rowCurrencyName</property>
                <property name="xalign">0</property>
                <property name="wrap">true</property>
              </object>
            </child>
            <child>
              <object class="GtkLabel" id="currencySymbol">
                <property name="xalign">0</property>
              </object>
            </child>
          </object>
        </child>
        <child>
          <object class="GtkRevealer" id="currencyFavoriteRevealer">
            <property name="transition-type">GTK_REVEALER_TRANSITION_TYPE_CROSSFADE</property>
            <child>
              <object class="GtkImage">
                <property name="icon-name">starred-symbolic</property>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>

