<interface>
  <object class="GtkWindow" id="settingsWindow">
    <property name="resizable">false</property>
    <property name="default-width">500</property>
    <property name="default-height">250</property>
    <property name="hide-on-close">true</property>
    <property name="modal">true</property>
    <property name="title" translatable="yes">Settings</property>
    <child>
      <object class="GtkBox">
        <property name="name">settingsWindowMainBox</property>
        <property name="orientation">vertical</property>
        <child>
          <object class="GtkBox">
            <property name="orientation">vertical</property>
            <child>
              <object class="GtkBox">
                <child>
                  <object class="GtkLabel">
                    <property name="label" translatable="yes">Nomics API Key</property>
                    <property name="name">settingsApiKey</property>
                  </object>
                </child>
                <child>
                  <object class="GtkEntry" id="settingsApiKeyEntry">
                    <property name="hexpand">true</property>
                  </object>
                </child>
             </object>
            </child>
            <child>
              <object class="GtkBox">
                <property name="name">settingsApiKeyInfos</property>
                <child>
                  <object class="GtkLabel">
                    <property name="name">settingsApiKeyInfosText</property>
                    <property name="wrap">true</property>
                    <property name="label" translatable="yes">Please choose a new Nomics API key, as the default one can be overloaded</property>
                  </object>
                </child>
                <child>
                  <object class="GtkLinkButton">
                    <property name="label">Nomics</property>
                    <property name="uri">https://p.nomics.com/pricing#free-plan</property>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
  </object>
</interface>
