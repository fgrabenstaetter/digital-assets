{
    "app-id": "fr.fgrabenstaetter.DigitalAssets",
    "runtime": "org.gnome.Platform",
    "runtime-version": "3.32",
    "sdk": "org.gnome.Sdk",
    "command": "fr.fgrabenstaetter.DigitalAssets",
    "finish-args": [
        "--socket=fallback-x11",
        "--socket=wayland",
        "--share=ipc",
        "--share=network",
        "--filesystem=xdg-run/dconf",
        "--filesystem=~/.config/dconf:ro",
        "--talk-name=ca.desrt.dconf",
        "--env=DCONF_USER_CONFIG_DIR=.config/dconf"
    ],
    "cleanup-commands": [ "glib-compile-schemas /app/share/glib-2.0/schemas" ],
    "modules": [
        {
            "name": "digital-assets",
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "git",
                    "url": "https://gitlab.gnome.org/fgrabenstaetter/digital-assets.git"
                }
            ]
        }
    ]
}
